// Online C compiler to run C program online
#include <stdio.h>
int reverse(int n)
{
    int r=0;
    while(n>0)
    {
        r=r*10+n%10;
        n=n/10;
    }
  return(r);    
}

int main() 
{
  int a,b ;
  printf("enter value");
  scanf("%d",&a);
  b=reverse(a);
    printf("value rev=%d",b);   
    return 0;
}
output =
enter value123
value rev=321
