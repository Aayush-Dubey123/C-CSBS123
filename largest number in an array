#include <stdio.h>
 int large( int *p, int size)
{
    int max,i;
    max=p[0];
    
    for(i=0;i<size;i++)
    {
     if(p[i]>max)
     {
        max=p[i];
     }
    } return(max); 
}
 int main()
 {
    int a[5]={8,9,-1,2,3};
    int b[3]={3,1,6};
    int c[7]={10,5,6,4,12,15,2};
    printf("\n%d",large(a,5));
    printf("\n%d",large(b,3));
    printf("\n%d",large(c,7));
 }
output=
9
6
15
