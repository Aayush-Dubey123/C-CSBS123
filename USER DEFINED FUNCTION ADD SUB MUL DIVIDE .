
#include <stdio.h>
void add(int a,int b)
{
printf("\n%d+%d=%d",a,b,a+b);
}
void sub(int a,int b)
{
printf("\n%d-%d=%d",a,b,a-b);
}
void divide(float a,float b)
{
printf("\n%0.2f/%0.2f=%0.2f",a,b,a/b);
}
void multiply(int a,int b)
{
printf("\n%dx%d=%d",a,b,a*b);
}

int main() 
{
  int p,q;
  printf("enter values=");
  scanf("%d%d",&p,&q);
 add(p,q);
 sub(p,q);
 divide(p,q);
 multiply(p,q);
    return 0;
}
OUTPUT=enter values=1 2
1+2=3
1-2=-1
1.00/2.00=0.50
1x2=2
