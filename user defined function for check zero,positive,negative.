
#include <stdio.h>
void check()
{
 int a;
  printf("enter value=");
  scanf("%d",&a);
  if(a>0)
     {
  printf("\nnum is positive=%d",a);
     }
    if(a<0)
     {
  printf("\nnum is negative=%d",a);
     }
    if(a==0)
    {
   printf("\nnum is zero=%d",a);
    }
}
int main() 
{ 
 check();
    return 0;
}
output=
enter value=2
num is positive=2
