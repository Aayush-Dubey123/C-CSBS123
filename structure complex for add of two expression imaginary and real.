// Online C compiler to run C program online
#include <stdio.h>
struct complex
{
    int real,img;
}c1,c2,c3;

int main()
{
printf("enter real and imaginary for exp 1 =");
scanf("%d%d",&c1.real,&c1.img);
printf("enter real and imaginary for exp 2 =");
scanf("%d%d",&c2.real,&c2.img);

c3.real = c1.real+c2.real;
c3.img = c1.img+c2.img;
if(c3.img>0)
{
    printf("\n expression = %d+i %d",c3.real,c3.img);
}
else
{
    printf("\n expression = %d-i%d",c3.real,-1*c3.img);
}
    
    return 0;
}
output =enter real and imaginary for exp 1 =1 2
enter real and imaginary for exp 2 =2 -4
expression = 3-i2

