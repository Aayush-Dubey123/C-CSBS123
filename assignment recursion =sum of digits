#include <stdio.h>
int add(int n)
{
int d,sum;
sum=0;
if(n==0)
{
    return(0);
}
    {
        d=n%10;
        sum=sum+d;
    }
return (sum+add(n/10));
} 
 int main()
 {
    int num;
    printf("\nenter any numbers =");
    scanf("%d",&num);
    printf("\nsum of digits of %d is %d",num,add(num));
    return(0);
 }
output =
enter any numbers =123
sum of digits of 123 is 6
