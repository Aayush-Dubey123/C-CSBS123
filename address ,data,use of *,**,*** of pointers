#include <stdio.h>

 int main()
 {
    int a=10;
    int *p ,**q,***r;
    p=&a;
    q=&p;
    r=&q;
    printf("\na=%d",a);
    printf("\n*p%d",*p);
    printf("\n**q=%d",**q);
    printf("\n***r=%d",***r);
    printf("\naddress of a=%u",&a);
    printf("\naddress of p%u",&p);
    printf("\naddress of q=%u",&q);
    printf("\ndata of p=%u",p);
    printf("\ndata of q=%u",q);
 }
output =a=10
*p10
**q=10
***r=10
address of a=3997689764
address of p3997689752
address of q=3997689744
data of p=3997689764
data of q=3997689752
